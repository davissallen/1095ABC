<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorAccent"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"></LinearLayout>



    <ImageView
        android:layout_width="119dp"
        android:layout_height="248dp"
        android:id="@+id/splash_screen_icon"
        android:src="@drawable/playstore_icon"
        android:layout_gravity="center"
        android:layout_weight="0.15"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_1095abc"
        android:textSize="48dp"
        android:layout_weight="0.25"
        android:textAlignment="center"
        android:textColor="@color/white"/>
</LinearLayout>